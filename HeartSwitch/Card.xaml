<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="Card">
        <Border Width="100" Height="150" BorderBrush="Black" BorderThickness="2" CornerRadius="10" Background="White">
            <Grid>
                <TextBlock Text="{Binding Rank}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5" FontSize="18" FontWeight="Bold"/>
                <TextBlock Text="{Binding Rank}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10,5" FontSize="18" FontWeight="Bold"/>
                <TextBlock Text="{Binding Suit}" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>
